{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "baseUrl": "./src"
  },
  "ts-node": {
    "esm": true
  },
  "lib": [
    "ESNext"
  ],
  "include": [
    "src/**/*"
  ]
}